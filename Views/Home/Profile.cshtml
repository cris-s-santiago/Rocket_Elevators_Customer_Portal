@{
    ViewData["Title"] = "Update Customer";
}

<script src="~/js/jquery-3.5.1.min.js"></script>
<div class="container">

    <div class="bold font-raleway wow fadeInUp animated">
        <h2 class="fs-55 fw-400 text-center">PROFILE SETTINGS</h2>
    </div>

</div>

<script>

</script>

<form action="" onsubmit="return UpdateCustomer();" id="customerForm">
    <div id="quote_form" class="container">
        <div class="row">
            <div id="typeChoice" class="col-md-12 form-group">

                <script>
                    let customer = JSON.parse('@Html.Raw(Json.Serialize(ViewBag.customer))');
                </script>

                <label for="company_name">Company Name</label>
                <input required type="text" value="@ViewBag.customer.company_name" class="form-control" name="company_name" id="company_name">
                <br />

                <label for="full_name_of_company_contact">Company's Contact Name</label>
                <input required type="text" value="@ViewBag.customer.cpy_contact_full_name" class="form-control" name="cpy_contact_full_name" id="cpy_contact_full_name">
                <br />

                <label for="company_contact_phone">Company's Contact Phone</label>
                <input required type="text" value="@ViewBag.customer.cpy_contact_phone" class="form-control" name="cpy_contact_phone" id="cpy_contact_phone">
                <br />

                <label for="email_of_company_contact">Company's Contact Email</label>
                <input required type="text" value="@ViewBag.customer.cpy_contact_email" class="form-control" name="cpy_contact_email" id="cpy_contact_email">
                <br />

                <label for="company_description">Company's Description</label>
                <input required type="text" value="@ViewBag.customer.cpy_description" class="form-control" name="cpy_description" id="cpy_description">
                <br />

                <label for="full_name_of_service_technical_authority">Support Contact Name</label>
                <input required type="text" value="@ViewBag.customer.tech_authority_service_full_name" class="form-control" name="tech_authority_service_full_name" id="tech_authority_service_full_name">
                <br />

                <label for="technical_authority_phone_for_service_">Support Contact Phone</label>
                <input required type="text" value="@ViewBag.customer.tech_authority_service_phone" class="form-control" name="tech_authority_service_phone" id="tech_authority_service_phone">
                <br />

                <label for="technical_manager_email_for_service">Support Contact Email</label>
                <input required type="text" value="@ViewBag.customer.tech_manager_service_email" class="form-control" name="tech_manager_service_email" id="tech_manager_service_email">
                <br />


                <div class="row">
                    <!--submit-->
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary" id="btnProfile"><i class="fa fa-check"></i> SUBMIT MODIFICATIONS </button>
                        <br /><br />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>